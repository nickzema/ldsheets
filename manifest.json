{
  "manifest_version": 2,
  "name": "Lion Dragon Sheet",
  "version": "1.1.3",
  "author": "Nick Zema",
  "description": "A form-fillable character sheet for the Lion & Dragon RPG.",
  
  "action": {
    "title": "LD Character Sheet",
    "icon": "https://img.icons8.com/ios-filled/50/000000/scroll.png",
    "popover": "https://nickzema.github.io/ldsheets/index.html"
  },
  
  "tools": [
    {
      "name": "LD Character Sheet",
      "icon": "https://img.icons8.com/ios-filled/50/000000/scroll.png",
      "permissions": [
        {
          "name": "ALLOW_FULLSCREEN",
          "reason": "Allows the character sheet to be viewed in full-screen popout mode."
        }
      ],
      "mimeType": "text/html",
      "url": "https://nickzema.github.io/ldsheets/index.html",
      "shortcut": "L",
      "area": "toolbar",
      "command": "tool",
      "target": "popout"
    }
  ]
}
